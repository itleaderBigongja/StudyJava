package SamplePackage;

public class splitClass {

	public static void main(String[] args) {
		
		String toDay = "2024-01-19";
		String[] toDayArray;
		
		
		// 첫 번째 방법 : 배열의 인덱스에 하나씩 저장한다.
		toDayArray = toDay.split("-");
		System.out.printf("배열의 첫 번째 인덱스 데이터 : %s\n", toDayArray[0]); // 주소 : @7d
		System.out.printf("배열의 첫 번째 인덱스 데이터 주소 : %s\n", toDayArray[0].hashCode());
		System.out.printf("배열의 두 번째 인덱스 데이터 : %s\n", toDayArray[1]); // 주소 : 417
		System.out.printf("배열의 세 번째 인덱스 데이터 : %s\n", toDayArray[2]); // 주소 : 077
	}
}


