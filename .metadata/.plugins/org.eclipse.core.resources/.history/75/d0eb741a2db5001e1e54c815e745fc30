package SamplePackage;

public class equalsClass {

	public static void main(String[] args) {
		String str_1 = "I want to do Developer";
		String str_2 = "I want to do Developer";
		
		String str_3 = new String("I want to do Developer");
		String str_4 = new String("I have to Coding");
		
		String str_5 = "I have to Coding";
		String str_6 = new String("i have to coding");
		
		
		// 첫 번째 : equals()를 사용해 같은 문자열 비교 해보기
		System.out.println("[ 1. equals()를 사용해 같은 문자열 비교 해보기 ]");
		System.out.println(str_1 == str_2);
		System.out.println(str_1 == str_3);
		System.out.println();
	
		
		// 두 번째 : equals()를 사용해 다른 문자열 비교 해보기
		System.out.println("[ 2. equals()를 사용해 다른 문자열 비교 해보기 ]");
		System.out.println(str_1.equalsIgnoreCase(str_5));
		System.out.println(str_1.equalsIgnoreCase(str_4));
		System.out.println();
		
		// 세 번째 : equals()를 사용해 대소문자 비교 해보기
		System.out.println("[ 3. equals()를 사용해 문자열의 대소문자 비교 해보기");
		System.out.println(str_5.equalsIgnoreCase(str_6));
	}
}

