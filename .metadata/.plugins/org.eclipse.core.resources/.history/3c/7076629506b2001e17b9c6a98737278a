package SamplePackage;

public class SampleClass {

	// 코드를 실행하는 main 메소드
	public static void main(String[] args) {

		int int_1;				// 방법_1 = 정수를 표현할 수 있는 int형 변수의 생성 
		int int_2 = 0;			// 방법_2 = 정수를 표현할 수 있는 int형 변수의 생성 및 정의 
		
		
		float float_1;			// 방법_1 = 실수를 표현할 수 있는 float형 변수의 생성 
		float float_2 = 0;		// 방법_2 = 실수를 표현할 수 있는 float형 변수의 생성 및 정의 
		
		
		char char_1;			// 방법_1 = 문자를 표현할 수 있는 char형 변수의 생성  
		char char_2 = ' ';		// 방법_2 = 문자를 표현할 수 있는 char형 변수의 생성 및 정의 
		
		
		String string_1;		// 방법_1 = 문자열을 표현할 수 있는 String형 변수의 생성 
		String string_2 = "";	// 방법_2 = 문자열을 표현할 수 있는 String형 변수의 생성 및 정의
		
		
		
		int_1 = 100;
		float_1 = 100;
		char_1 = 'a';
		string_1 = "차세대 IT리더가 되고픈 비공자 입니다.";
		
		System.out.println("정수 데이터 출력 : " + int_1);
		System.out.println("정수 데이터 출력 : " + float_1);
		System.out.println("정수 데이터 출력 : " + char_1);
		System.out.println("정수 데이터 출력 : " + string_1);
	}
}
