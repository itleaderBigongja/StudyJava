package SamplePackage;

public class MethodInStringWrapper {

	public static void main(String[] args) {
		
		// String Wrapper 객체 생성 및 정의하기
		String str_1 = new String("안녕하세요 차세대 IT리더 비공자 입니다.");
		
		// 문자의 인덱스를 찾는 charAt()이라는 메소드 사용
		System.out.printf("%d", str_1.charAt('안'));		// 안 문자 위치 찾아 출력
		System.out.printf("%d", str_1.charAt('차'));		// 차 문자 위치 찾아 출력
		System.out.printf("%d", str_1.charAt('I'));		// I 문자 위치 찾아 출력
		System.out.printf("%d", str_1.charAt('비'));		// 비 문자 위치 찾아 출력
		System.out.printf("%d", str_1.charAt('공'));		// 공 문자 위치 찾아 출력
		System.out.printf("%d", str_1.charAt('자'));		// 자 문자 위치 찾아 출력	
	}
}
