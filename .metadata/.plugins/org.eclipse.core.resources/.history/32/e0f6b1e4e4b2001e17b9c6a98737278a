package SamplePackage;

public class MethodInStringWrapper {

	public static void main(String[] args) {
		
		// String Wrapper 객체 생성 및 정의하기
		String str_1 = new String("안녕하세요 차세대 IT리더 비공자 입니다.");
		
		// 문자의 인덱스를 찾는 charAt()이라는 메소드 사용
		// charAt( 문자의 위치 입력[인덱스] )
		System.out.println("1 번째 찾을 문자의 위치 : " + str_1.charAt(0));
		System.out.println("2 번째 찾을 문자의 위치 : " + str_1.charAt(5));
		System.out.println("3 번째 찾을 문자의 위치 : " + str_1.charAt(6));
		System.out.println("4 번째 찾을 문자의 위치 : " + str_1.charAt(7));
		System.out.println("5 번째 찾을 문자의 위치 : " + str_1.charAt(8));
		
		
		
		// 문자의 마지막 인덱스 찾기
		String str_2 = new String("String Wrapper 클래스 기능이 너무 많아요..ㅠㅠ");
		// 문자열의 처음 인덱스 찾기
		System.out.println("문자열의 첫 번째 인덱스 : " + str_2.charAt(0) + "위치 입니다.");
		// 문자열의 마지막 인덱스 찾기
		System.out.println("문자열의 첫 번째 인덱스 : " + str_2.charAt(-1) + "위치 입니다.");
	}
}


