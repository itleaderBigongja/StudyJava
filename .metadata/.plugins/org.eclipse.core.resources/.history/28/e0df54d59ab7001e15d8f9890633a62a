package SamplePackage;

public class ReplaceClass {

	public static void main(String[] args) {
		
		String exam = new String("시험공부 많이 하셨나요?, 시험공부 분명 잘할거예요~!!");
		String obj_1 = "코딩";
		String obj_2 = "Java";
		String obj_3 = "알고리즘";
		
		System.out.printf("여러분 : %s\n", exam.replace("시험", obj_1));
		System.out.printf("여러분 : %s\n", exam.replace("시험", obj_2));
		System.out.printf("여러분 : %s\n", exam.replace("시험", obj_3));
	}

}
