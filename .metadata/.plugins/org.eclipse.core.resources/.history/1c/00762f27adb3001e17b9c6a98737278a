package SamplePackage;

public class StringClass_2 {

	public static void main(String[] args) {
	
		String str = "오늘의 공부는 indexOf 입니다.";
		
		System.out.println("첫 번째 indexOf()로 찾은 문자의 위치 : " + str.indexOf('오'));
		System.out.println("두 번째 indexOf()로 찾은 문자의 위치 : " + str.indexOf('공'));
		System.out.println("세 번째 indexOf()로 찾은 문자의 위치 : " + str.indexOf('x'));
		System.out.println("네 번째 indexOf()로 찾은 문자의 위치 : " + str.indexOf('다'));
		
		
		System.out.println("첫 번째 문자의 위치를 입력해 문자를 찾기 : " + str.indexOf(1));
	}
}


